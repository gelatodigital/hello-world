{
  "name": "gelato-helloworld",
  "version": "0.0.1",
  "description": "Gelato hello world contracts and tests",
  "scripts": {
    "build": "yarn install && yarn compile && npx tsc",
    "clean": "yarn hardhat clean && rm -rf node_modules && rm -rf dist",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write '*/**/*.*{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "yarn husky install",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gelatodigital/GEL-staking.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.2",
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "1.0.9",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@tsconfig/recommended": "1.0.2",
    "@typechain/ethers-v6": "0.5.0",
    "@typechain/hardhat": "9.0.0",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@types/node": "20.5.7",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "chai": "4.3.8",
    "dotenv": "16.3.1",
    "eslint": "8.48.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "6.7.1",
    "hardhat": "2.17.2",
    "hardhat-deploy": "0.11.37",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "2.8.4",
    "prettier-plugin-solidity": "1.1.3",
    "solhint": "3.6.2",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.3.1",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
